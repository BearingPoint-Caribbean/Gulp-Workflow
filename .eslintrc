{
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"indent": [
			"error",
			"tab"
		],
		"quotes": [
			2,
			"single"
		],
		"linebreak-style": [
			1,
			"windows"
		],
		"semi": [
			2,
			"always"
		],
		"no-console": 1
	},
	"globals": {
		"ENV": true,
		"module": true,
		"require": true
	},
	"env": {
		"es6": true,
		"browser": true
	},
	"extends": "eslint:recommended"
}